@page
@model AvatarModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@Model.message</p>

        <canvas id="canvas" width="100" height="100"></canvas>

        <button  onMouseOver="this.style.background='orange'"
   onMouseOut="this.style.background='#026db7'" style="height:45px ;width:150px; color: black; border: 2px solid #2f4f4f; border-radius: 5px; background-color: #026db7;" onclick="drawAll();">Generate new avatar</button>
        <button  onMouseOver="this.style.background='orange'"
   onMouseOut="this.style.background='#026db7'" style="height:45px ;width:150px; color: black; border: 2px solid #2f4f4f; border-radius: 5px; background-color: #026db7;" id="btnSave">Save as my avatar</button>

     

