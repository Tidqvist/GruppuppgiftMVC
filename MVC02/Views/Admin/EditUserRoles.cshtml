@model EditUserRolesViewModel
<h2>Admin</h2>

<h4>Edit Role for userd</h4>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Id" class="control-label"></label>
                <input disabled asp-for="User.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input disabled asp-for="User.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedRoles">Role Access</label>
                <select multiple class="form-control" asp-for="SelectedRoles" asp-items="Model.AllRoles">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>